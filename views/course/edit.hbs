<h1>Choose Course</h1>

{{#if courses}}
<div class="list-group">
  {{#each courses}}
  <li class="list-group-item d-flex justify-content-between align-items-center">
    {{title}}
    <a href="/course/edit/{{_id}}" ><button type="button" class="btn btn-info">Edit Course</button></a>
    <a href="/lecture/add/{{_id}}" ><button type="button" class="btn btn-info">Add lectures</button></a>
    <a href="/course/delete/{{_id}}" ><button type="button" class="btn btn-info">Delete</button></a>
   
    <span class="badge badge-primary badge-pill">{{lectures.length}}</span>
  </li>
  {{/each}}
</div>
{{else}}
{{/if}}
