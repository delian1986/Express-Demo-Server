<h1>Add lecture to course {{title}}</h1>

<form method="POST">
    <div class="form-group">
        <label for="title">Lecture Title</label>
        <input name="title" type="text" class="form-control" placeholder="Lecture title">
    </div>

    <div class="form-group">
        <label for="videoUrl">Image url</label>
        <input name="videoUrl" type="text" class="form-control" placeholder="Video Url">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

{{#if lectures}}
<h2>No Lectures in this course</h2>
{{else}}
<h2>lectures</h2>
{{/if}}